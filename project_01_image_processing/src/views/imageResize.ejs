<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('includes/head.ejs') %>
  <link rel="stylesheet" href="/resize.css">
</head>
<body>
  <header class="header">
    <%- include('includes/header.ejs') %>
  </header>
  <main>
    <section class="resize-img">
      <div class="resize-img__container">
        <div class="resize-img__image">
          <img src="/<%= imgPath %>" alt="Image">
        </div>
        <form class="resize-img__form" action="/api/images" method="GET" enctype="application/x-www-form-urlencoded">
          <input type="hidden" name="filename" value="<%= imgPath %>">
          <div class="resize-img__form__input">
            <label for="width">Width: </label>
            <input type="number" name="width" id="width">
          </div>
          <div class="resize-img__form__input">
            <label for="height">Height: </label>
            <input type="number" name="height" id="height">
          </div>
          <div class="resize-image__form__button">
            <button type="submit">Resize</button>
          </div>
        </form>
      </div>
    </section>
  </main>
</body>
</html>